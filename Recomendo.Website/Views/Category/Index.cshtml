@model IQueryable<Category>

<div class="container mt-5">
    <div class="row">
        <div class="col-6">
            <h1 class="text-primary">Categorias</h1>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Adicionar Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped mt-5" style="width: 100%">
        <thead class="bg-light">
            <tr>
                <th width="70%">Categoria</th>
                <th width="15%" class="text-right">Editar</th>
                <th width="15%" class="text-right">Remover</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var category in Model)
                {
                    <tr>
                        <td width="70%">@category.CategoryName</td>
                        <td width="15%" class="text-right"><a asp-route-Id="@category.Id" asp-action="Edit" class="btn btn-outline-primary"><i class="fas fa-edit"></i>&nbsp; Editar</a></td>
                        <td width="15%" class="text-right"><a asp-route-CategoryId="@category.Id" asp-action="Delete" class="btn btn-outline-danger"><i class="fas fa-trash"></i>&nbsp; Remover</a></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center bg-white"><i class="fas fa-info-circle"></i> &nbsp; Não existem categorias cadastradas</td>
                </tr>
            }
        </tbody>
    </table>


</div>
