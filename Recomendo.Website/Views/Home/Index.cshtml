@model IQueryable<Movie>
<div class="mt-5 container">
    <div class="row row-flex">
        @foreach (var movie in Model)
        {
        <div class="p-1">
            <div class="card box-shadow" style="width: 360px;">
                <div class="card-header">
                    @movie.Title - @movie.Year
                </div>
                <img class="img-fluid" src="~/images/movies/@movie.Image" alt="@movie.Title" style="width:360px; height:640px;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a class="btn btn-sm btn-outline-secondary" asp-route-Id="@movie.Id" asp-action="Details" asp-controller="Movie">View</a>
                            <a class="btn btn-sm btn-outline-secondary" asp-route-Id="@movie.Id" asp-action="Edit" asp-controller="Movie">Edit</a>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <small class="text-muted float-right">@($"{movie.DurationHours}h {movie.DurationMinutes}min")</small>
                </div>
            </div>
        </div>
        }
    </div>
</div>